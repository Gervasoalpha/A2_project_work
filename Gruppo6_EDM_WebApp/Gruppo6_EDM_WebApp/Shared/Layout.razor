@inherits LayoutComponentBase

<div class="page">

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <button type="button" class="btn"><a href="Logout">Log out</a></button>
                </Authorized>
                <NotAuthorized>
                    <button type="button" class="btn"><a href="Registration">Register</a></button>
                    <button type="button" class="btn"><a href="Login">Log in</a></button>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
